{
  "name": "node-typescript-starter",
  "version": "1.0.0",
  "description": "Boilerplate nodeJS with Typescript",
  "main": "./dist/bin/server.js",
  "repository": "https://github.com/KalleoPinheiro/node-typescript-starter.git",
  "author": "Kalleo Pinheiro <windson.rocha@zup.com.br>",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --collect-coverage",
    "clean": "rm -rf ./yarn-lock.json ./node_modules ./dist; yarn install; yarn audit --fix",
    "dev": "nodemon ./bin/server.ts",
    "build": "yarn clean; tsc"
  },
  "dependencies": {
    "compression": "1.7.4",
    "cors": "2.8.5",
    "debug": "4.1.1",
    "errorhandler": "1.5.1",
    "express": "4.17.1",
    "helmet": "3.21.2",
    "node-notifier": "6.0.0",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "@types/compression": "1.0.1",
    "@types/cors": "2.8.6",
    "@types/debug": "4.1.5",
    "@types/errorhandler": "0.0.32",
    "@types/eslint": "6.1.3",
    "@types/express": "4.17.2",
    "@types/helmet": "0.0.45",
    "@types/jest": "24.9.0",
    "@types/node": "13.1.7",
    "@types/node-notifier": "5.4.0",
    "@types/prettier": "1.19.0",
    "@types/winston": "2.4.4",
    "@typescript-eslint/eslint-plugin": "2.16.0",
    "@typescript-eslint/parser": "2.16.0",
    "cross-env": "6.0.3",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-config-standard": "14.1.0",
    "eslint-plugin-import": "2.20.0",
    "eslint-plugin-jest": "23.6.0",
    "eslint-plugin-node": "11.0.0",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "git-cz": "3.3.0",
    "husky": "4.0.9",
    "jest": "24.9.0",
    "lint-staged": "9.5.0",
    "nodemon": "2.0.2",
    "prettier": "1.19.1",
    "sucrase": "3.12.1",
    "ts-jest": "24.3.0",
    "typescript": "3.7.4"
  },
  "lint-staged": {
    "src/**/*.{ts}": [
      "eslint . --fix",
      "prettier --write",
      "git add"
    ],
    "bin/*.ts": [
      "eslint . --fix",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/git-cz"
    }
  }
}
