{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@logs/*": ["logs/*"],
      "@controllers/*": ["app/controllers/*"],
  },
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist"
  },
  "lib": ["es2015"],
  "files": ["./node_modules/@types/node/index.d.ts"],
  "include": ["src/**/*.ts", "bin/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts"],
  "pretty": true
}
